{
  "name": "yournotes",
  "version": "0.1.0",
  "author": "Anton Zimnitski",
  "description": "A note taking app for Mac, Windows and Linux.",
  "main": "public/electron.js",
  "homepage": "./",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zimniros/YourNotes.git"
  },
  "bugs": {
    "url": "https://github.com/Zimniros/YourNotes/issues"
  },
  "keywords": [
    "windows",
    "linux",
    "react",
    "electron"
  ],
  "dependencies": {
    "@craco/craco": "^3.6.0",
    "@mdi/js": "^3.5.95",
    "@mdi/react": "^1.1.0",
    "date-fns": "^1.30.1",
    "electron-is-dev": "^1.0.1",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "nedb-promises": "^3.0.2",
    "node-sass": "^4.11.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-autosuggest": "^9.4.3",
    "react-dom": "^16.8.4",
    "react-modal": "^3.8.1",
    "react-quill": "^1.3.3",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "eject": "craco eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "precommit": "pretty-quick --staged",
    "postinstall": "electron-builder install-app-deps",
    "build-linux": "yarn build && electron-builder build --linux",
    "build-win": "yarn build && electron-builder build --win --x64",
    "build-all": "yarn build && electron-builder build -wl"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "devtron": "^1.4.0",
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "spectron": "^5.0.0",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "com.yournotes",
    "extends": null,
    "files": [
      "build/**/*",
      "public/electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    },
    "nsis": {
      "installerIcon": "public/icon.ico",
      "license": "LICENSE",
      "warningsAsErrors": false
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
